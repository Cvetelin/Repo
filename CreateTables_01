
CREATE TABLE project (
PPROJECT_ID BIGINT PRIMARY KEY NOT NUll,
DATE_CREATION TIMESTAMP NOT NULL,
DEPENDENCY_JAR  BLOB,
DEPENDENCY_JAR_NAME  VARCHAR(255),
DEPENDENCY_JAR_PATH VARCHAR(255),
DESCRIPTION  VARCHAR(400),
JAR_NAME  VARCHAR(255) NOT NULL,
JAR_PATH  VARCHAR(255) NOT NULL,
PROJECT_NAME VARCHAR(45) NOT NULL,
TEST_JAR BLOB NOT NULL,
DATE_MODIFICATION TIMESTAMP,
CLASS_COUUN INTEGER,
TEST_COUNT INTEGER,
);

create table user (
USER_ID BIGINT PRIMARY KEY NOT NUll,
FIRST_NAME VARCHAR(35),
LAST_NAME  VARCHAR(35),
USER_NAME  VARCHAR(35) NOT NUll,
PASSWORD VARCHAR(35) NOT NUll,
EMAIL  VARCHAR(35),
ROLE  VARCHAR(35) NOT NUll
);

CREATE TABLE execution (
EXECUTION_ID  BIGINT PRIMARY KEY NOT NUll,
NAME VARCHAR(255),
PATH VARCHAR(255),
EXECUTION_DATE TIMESTAMP,
TEST_ID BIGINT NOT NUll,
FAILURE_REASON VARCHAR(255),
STATUS BIT,
RUN_TIME BIGINT);

CREATE TABLE test (
TEST_ID BIGINT PRIMARY KEY NOT NUll,
NAME VARCHAR(255),
CLASS_ID BIGINT  NOT NULL,
EXECUTION_DATE TIMESTAMP);


CREATE TABLE class (
CLASS_ID BIGINT PRIMARY KEY NOT NULL,
NAME VARCHAR(255) NOT NULL,
QUALIFIED_NAME VARCHAR(255) NOT NULL,
EXEC_STATUS BIT,
PPROJECT_ID BIGINT NOT NULL,
EXCUTION_DATE TIMESTAMP, 
NUMBER_TESTS INTEGER,
RUN_TIME BIGINT,
NUMBER_FAILED_TESTS INTEGER);

